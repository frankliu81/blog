  <!-- <hr> -->
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <!-- <hr> -->
  <div id="container-yield" class="container">
    <%= yield %>
  </div>
</body>
</html>
