<%= @post.errors.full_messages.join(", ") %>

<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div>
      <%= f.label :category %>
      <%# collection_select(object, method, collection, value_method, text_method, options = {}, html_options = {}) public %>
       <%# second param, method instance, what you want to save to the database %>
       <%= f.collection_select :category_id, Category.order(:name), :id, :name %>
  </div>

  <div>
    <%= f.label :tag_ids %>
    <%= f.collection_check_boxes :tag_ids, Tag.order(:name), :id, :name %>
  </div>

  <%= f.submit %>

<% end %>
