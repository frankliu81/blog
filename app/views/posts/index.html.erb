
<h1>All Posts</h1>

<%= paginate(@posts) %>
<div class="pagination_info">
  <%= page_entries_info @posts %>
</div>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
    </tr>
  </thead>
  <tbody>

    <% @posts.each do |post| %>
      <div>
        <%#= link_to post.title, post_path(post) %>
        <tr>
          <td><%= link_to post.title, post_path(post) %></td>
          <td><%= post.user.full_name %></td>
        </tr>

      </div>
    <% end %>

  </tbody>
</table>



<%= paginate(@posts) %>
