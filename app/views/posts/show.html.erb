<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<p>Category: <%= @post.category.name %></p>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete,
                                  data: {confirm: "Are you sure?"}%>



<hr>

<%= @comment.errors.full_messages.join(", ") %>

<hr>


<h2>Comments</h2>
<%# partil review is defined in review/_review.html.erb %>
<%= render @post.comments.order('created_at DESC') %>

<%= form_for @comment, url: post_comments_path(@post), html: {class: "form"} do |f| %>

  <div class="form-group post-comment">
    <%= f.label :body, "Comment", class: "control-label" %>
    <%= f.text_area :body, class: "form-control post-comment__textarea" %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Comment", class: "btn btn-primary" %>
  </div>
<% end %>

</div>
